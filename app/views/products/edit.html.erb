<% provide(:title, "Edit") %>
<h2>EDIT</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :p_name, class: 'form-control' %>

      <%= f.label :photo %>
      <%= f.text_field :p_photo, class: 'form-control' %>

      <%= f.label :detail %>
      <%= f.text_field :p_detail, class: 'form-control' %>

      <%= f.label :genre %>
      <%= f.select :genre_id, [["candy", "1"], ["cookie", "2"], ["chocolate", "3"], ["gum", "4"], ["gimi", "5"]] ,class:"form-control" %>

      <%= f.label :cost %>
      <%= f.text_field :cost_id, class: 'form-control' %>

      <%= f.label :stock %>
      <%= f.text_field :stock_id, class: 'form-control' %>

      <%= f.label :manufacturer %>
      <%= f.text_field :manufacturer_id, class: 'form-control' %>

      <%= f.submit "SAVE", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>